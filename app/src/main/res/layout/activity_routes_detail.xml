<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_marginTop="14dp"
        android:text="HELLO"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/Steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:text="Steps:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/numOfSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/Steps"
        android:text="77"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/numOfMiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:text="77888885"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/numOfMiles"
        android:text="Miles:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Steps"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:text="Duration:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/numOfDur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Steps"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/dur"
        android:text="77"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/numOfDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:text="885"
        android:textSize="30dp" />





</RelativeLayout>